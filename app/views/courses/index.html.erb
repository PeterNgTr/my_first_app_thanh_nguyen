<h1>Searching for - <%= @search_term %></h1>

<% if @courses.nil? %>

<h1>Oops...There is no course found. Please try again!</h1>

<%else%>
<table border="1">
  <tr>
  	<th>Image</th>
  	<th>Name</th>
  	<th>Description</th>
  </tr>
  <% @courses.each do |course| %>
    <tr class=<%= cycle('even', 'odd') %>>
      <td><%= image_tag(course["smallIcon"])%></td>
      <td><marquee><%= course["name"] %></marquee></td>
      <td><%= course["shortDescription"] %></td>
    </tr>
  <% end %>
</table>
<%end%>